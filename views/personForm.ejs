<h1><%= person ? 'Editar' : 'Crear' %> Persona</h1>
<form action="<%= person ? '/person/' + person.id : '/person' %>" method="POST">
    <label for="first_name">Nombre:</label>
    <input type="text" name="first_name" value="<%= person ? person.first_name : '' %>" required>
    <label for="last_name">Apellido:</label>
    <input type="text" name="last_name" value="<%= person ? person.last_name : '' %>" required>
    <label for="mother_last_name">Apellido Materno:</label>
    <input type="text" name="mother_last_name" value="<%= person ? person.mother_last_name : '' %>" required>
    <label for="address">Dirección:</label>
    <input type="text" name="address" value="<%= person ? person.address : '' %>" required>
    <label for="phone">Teléfono:</label>
    <input type="text" name="phone" value="<%= person ? person.phone : '' %>" required>
    <label for="email">Email:</label>
    <input type="email" name="email" value="<%= person ? person.email : '' %>" required>
    <button type="submit"><%= person ? 'Actualizar' : 'Crear' %> Persona</button>
</form>
